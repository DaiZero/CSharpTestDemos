<Window x:Class="WpfApp_TestDemo.Views.MovingButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_TestDemo.Views"
        mc:Ignorable="d"
        Title="MovingButton" Height="497" Width="809">
    <Grid>
        <Button Content="Move!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" Click="Button_Click">
            <Button.RenderTransform>
                <TranslateTransform x:Name="tt" X="0" Y="0"/>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
