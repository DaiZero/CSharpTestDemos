<Window x:Class="WpfApp_TestDemo.Views.NoWindowStyle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_TestDemo.Views"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True" 
        Title="NoWindowStyle" d:DesignHeight="600" d:DesignWidth="800" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="Yellow" Grid.Row="0" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" >
            <Button Width="50" Height="30" x:Name="close" HorizontalAlignment="Right" Content="关闭" Click="close_Click"/>
        </StackPanel>
        <ContentControl Grid.Row="1"  />
        <ContentControl Grid.Row="1"/>
    </Grid>
</Window>
