@model MVCTestDemo.Models.UserDetailsModels

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="padding-top:30px;">
        <div id="AlertErrorMsg" class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert"
                    aria-hidden="true">
                &times;
            </button>
            @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
        </div>
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <span class="heading">Sign In</span>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control",@placeholder = "账  号" })
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "密  码" })
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                    </div>
                    <div class="row form-group">
                        <div >
                            <input type="submit" name="BtnSubmit" class="btn btn-primary" value="登 录" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#AlertErrorMsg').modal('hide');
        });
    </script>
</body>
</html>
